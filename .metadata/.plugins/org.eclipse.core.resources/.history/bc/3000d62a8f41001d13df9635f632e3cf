	public Order getO() {
		return o;
	}


	public void setO(Order o) {
		this.o = o;
	}


	public int getC() {
		return c;
	}


	public void setC(int c) {
		this.c = c;
	}


	public int getS() {
		return s;
	}


	public void setS(int s) {
		this.s = s;
	}


	@Override
	public String toString() {
		return "Bill [billid=" + billid + ", dateTime=" + dateTime + ", o=" + o + ", c=" + c + ", s=" + s + "]";
	}
	
