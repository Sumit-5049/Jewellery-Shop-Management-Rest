	public Bill() {
		super();
	}
	

	public Bill(int billid, Timestamp dateTime, Order o, int c, int s) {
		super();
		this.billid = billid;
		this.dateTime = dateTime;
		this.o = o;
		this.c = c;
		this.s = s;
	}


